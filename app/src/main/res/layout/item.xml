<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/makeIt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Disney"
        tools:ignore="MissingConstraints" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/makeIt"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/makeIt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Oil Painting"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView2"
        tools:ignore="MissingConstraints" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/makeIt2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/makeIt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Famous Oil Painting"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView3"
        tools:ignore="MissingConstraints" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/makeIt3" />
</androidx.constraintlayout.widget.ConstraintLayout>